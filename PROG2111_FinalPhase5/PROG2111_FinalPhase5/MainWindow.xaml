<Window x:Class="PROG2111_FinalPhase5.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:PROG2111_FinalPhase5"
		mc:Ignorable="d"
		Title="MainWindow" Height="500" Width="800">
	<Grid>
		<TabControl>
			<TabItem Header="Create">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition/>
						<RowDefinition Height="15*"/>
					</Grid.RowDefinitions>

					<ComboBox Name="createComboBox" SelectionChanged="createComboBox_SelectionChanged">
						<ComboBoxItem Name="createCbiStudentTable" Content="Student Table"/>
						<ComboBoxItem Name="createCbiProgramTable" Content="Program Table"/>
						<ComboBoxItem Name="createCbiProgramCourseTable" Content="Program Course Table"/>
						<ComboBoxItem Name="createCbiCourseTable" Content="Course Table"/>
						<ComboBoxItem Name="createCbiCourseOfferingTable" Content="Course Offering Table"/>
						<ComboBoxItem Name="createCbiCourseEnrollmentTable" Content="Course Enrollment Table"/>
						<ComboBoxItem Name="createCbiInstructorTable" Content="Instructor Table"/>
						<ComboBoxItem Name="createCbiInstructorAssignmentTable" Content="Instructor Assignment Table"/>
					</ComboBox>

					<!--student grid-->
					<Grid Grid.Row="1" Name="createStudentGrid" Visibility="Hidden">
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>
						<!--id-->
						<StackPanel Grid.Row="0">
							<Label Content="studentID" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateStudentID"/>
						</StackPanel>
						<!--programID-->
						<StackPanel Grid.Row="1">
							<Label Content="programID" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateStudentProgramID"/>
						</StackPanel>
						<!--first name-->
						<StackPanel Grid.Row="2">
							<Label Content="studentFirstName" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateStudentFirstName"/>
						</StackPanel>
						<!--last name-->
						<StackPanel Grid.Row="3">
							<Label Content="studentLastName" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateStudentLastName"/>
						</StackPanel>
						<!--email-->
						<StackPanel Grid.Row="4">
							<Label Content="studentEmail" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateStudentEmail"/>
						</StackPanel>
						<!--date of birth-->
						<StackPanel Grid.Row="5">
							<Label Content="studentDateOfBirth(dd/mm/yyyy)" HorizontalAlignment="Center"/>
							<DatePicker Width="300" Name="dateCreateStudentDateOfBirth"/>
						</StackPanel>
						<!--enrollment date-->
						<StackPanel Grid.Row="6">
							<Label Content="studentDateEnrolled(dd/mm/yyyy)" HorizontalAlignment="Center"/>
							<DatePicker Width="300" Name="dateCreateStudentDateEnrolled"/>
						</StackPanel>
						<Button Grid.Row="7" Margin="300, 5" Name="btnStudentSubmit" Content="Submit" Click="btnCreateStudentSubmit_Click"/>
					</Grid>


					<!--Program Grid-->
					<Grid Grid.Row="1" Name="createProgramGrid" Visibility="Hidden">
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>
						<!--id-->
						<StackPanel Grid.Row="0">
							<Label Content="programID" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateProgramID"/>
						</StackPanel>
						<!--program name-->
						<StackPanel Grid.Row="1">
							<Label Content="programName" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateProgramName"/>
						</StackPanel>
						<!--credential-->
						<StackPanel Grid.Row="2">
							<Label Content="programCredential" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateProgramCredential"/>
						</StackPanel>
						<!--Duration-->
						<StackPanel Grid.Row="3">
							<Label Content="programDurationInTerms" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateProgramDuration"/>
						</StackPanel>
						<!--isAvalible-->
						<StackPanel Grid.Row="4">
							<Label Content="programAvalibility" HorizontalAlignment="Center"/>
							<CheckBox Name="chkCreateProgramAvaliblility" HorizontalAlignment="Center" IsChecked="True"/>
						</StackPanel>
						<Button Grid.Row="5" Margin="300, 5" Name="btnCreateProgramSubmit" Content="Submit" Click="btnCreateProgramSubmit_Click"/>
					</Grid>

					<!--Course Grid-->
					<Grid Grid.Row="1" Name="createCourseGrid" Visibility="Hidden">
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>
						<!--id-->
						<StackPanel Grid.Row="0">
							<Label Content="courseID" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateCourseID"/>
						</StackPanel>
						<!--program name-->
						<StackPanel Grid.Row="1">
							<Label Content="courseName" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateCourseTitle"/>
						</StackPanel>
						<!--credential-->
						<StackPanel Grid.Row="2">
							<Label Content="courseDescription" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateCourseDescription"/>
						</StackPanel>
						<!--Duration-->
						<StackPanel Grid.Row="3">
							<Label Content="courseHours" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateCourseHours"/>
						</StackPanel>
						<Button Grid.Row="4" Margin="300, 5" Name="btnCreateCourseSubmit" Content="Submit" Click="btnCreateCourseSubmit_Click"/>
					</Grid>
					<!--Program Course Grid-->
					<Grid Grid.Row="1" Name="createProgramCourseGrid" Visibility="Hidden">
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>
						<!--program id-->
						<StackPanel Grid.Row="0">
							<Label Content="programID" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateProgramCourseProgramID"/>
						</StackPanel>
						<!--program id-->
						<StackPanel Grid.Row="1">
							<Label Content="courseID" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateProgramCourseCourseID"/>
						</StackPanel>
						
						<Button Grid.Row="2" Margin="300, 5" Name="btnCreateProgramCourseSubmit" Content="Submit" Click="btnCreateProgramCourseSubmit_Click"/>
					</Grid>
					
					<!-- instructor grid -->
					<Grid Grid.Row="1" Name="createInstructorGrid" Visibility="Hidden">
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>

						<!-- InstructorID -->
						<StackPanel Grid.Row="0">
							<Label Content="instructorID" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateInstructorID"/>
						</StackPanel>

						<!-- First Name -->
						<StackPanel Grid.Row="1">
							<Label Content="instructorFirstName" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateInstructorFirstName"/>
						</StackPanel>

						<!-- Last Name -->
						<StackPanel Grid.Row="2">
							<Label Content="instructorLastName" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateInstructorLastName"/>
						</StackPanel>

						<!-- Email -->
						<StackPanel Grid.Row="3">
							<Label Content="instructorEmail" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateInstructorEmail"/>
						</StackPanel>

						<!-- Hire Date -->
						<StackPanel Grid.Row="4">
							<Label Content="instructorHireDate (dd/mm/yyyy)" HorizontalAlignment="Center"/>
							<DatePicker Width="300" Name="dateCreateInstructorHireDate"/>
						</StackPanel>

						<!-- Office Location -->
						<StackPanel Grid.Row="5">
							<Label Content="instructorOfficeLocation" HorizontalAlignment="Center"/>
							<TextBox Width="300" Name="txtCreateInstructorOfficeLocation"/>
						</StackPanel>

						<!-- Submit Button -->
						<Button Grid.Row="6" Margin="300,5" Name="btnInstructorSubmit" Content="Submit" Click="btnCreateInstructorSubmit_Click"/>
					</Grid>

				</Grid>
			</TabItem>
			<TabItem Header="Read">

				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition/>
						<RowDefinition Height="15*"/>
					</Grid.RowDefinitions>

					<ComboBox Name="readComboBox" SelectionChanged="readComboBox_SelectionChanged">
						<ComboBoxItem Name="readCbiStudentTable" Content="Student Table"/>
						<ComboBoxItem Name="readCbiProgramTable" Content="Program Table"/>
						<ComboBoxItem Name="readCbiProgramCourseTable" Content="Program Course Table"/>
						<ComboBoxItem Name="readCbiCourseTable" Content="Course Table"/>
						<ComboBoxItem Name="readCbiCourseOfferingTable" Content="Course Offering Table"/>
						<ComboBoxItem Name="readCbiCourseEnrollmentTable" Content="Course Enrollment Table"/>
						<ComboBoxItem Name="readCbiInstructorTable" Content="Instructor Table"/>
						<ComboBoxItem Name="readCbiInstructorAssignmentTable" Content="Instructor Assignment Table"/>
					</ComboBox>

					<!--grids-->
					<DataGrid Name="readStudentDataGrid" Grid.Row="1" IsReadOnly="True" Visibility="Hidden"/>
					<DataGrid Name="readProgramDataGrid" Grid.Row="1" IsReadOnly="True" Visibility="Hidden"/>
					<DataGrid Name="readCourseDataGrid" Grid.Row="1" IsReadOnly="True" Visibility="Hidden"/>
					<DataGrid Name="readProgramCourseDataGrid" Grid.Row="1" IsReadOnly="True" Visibility="Hidden"/>
					<DataGrid Name="readInstructorDataGrid" Grid.Row="1" IsReadOnly="True" Visibility="Hidden"/>



				</Grid>
			</TabItem>
			<TabItem Header="Update">
				
			</TabItem>
			<TabItem Header="Delete">
				
			</TabItem>
			<TabItem Header="Fill Tables">
				<Button Content="FILL" Margin="10" FontSize="100" Name="btnFillTables" Click="btnFillTables_Click"/>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
